    function loadingAnimation(){
        loadingCounter++;
        if(loadingFrame == 3){
            loadingFrame++;
        }else if(loadingFrame == 4){
            loadingFrame--;
        }
        loading.destroy();
        if(loadingCounter>10){
            loading = game.add.sprite(450,0,'traffic_5');
            startButton = game.add.button(300,450,'button-start',IntroDestroy,this,1,0,2);
            return;
        }
        loading = game.add.sprite(450,0,'traffic_'+loadingFrame);
        setTimeout(loadingAnimation,500);
    }

